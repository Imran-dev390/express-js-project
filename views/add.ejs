 <% include ./partials/header.ejs %>

 <div class="w-full min-h-screen px-4 sm:px-6 md:px-10 py-5 text-white bg-zinc-800">
    <h1 class="text-xl">Create a post.</h1>
    <hr class="mt-3 opacity-10">
  
    <form action="/createpost" method="post" enctype="multipart/form-data">
      <input
        class="px-4 py-2 mt-2 rounded-lg block border border-white w-full sm:w-3/4 md:w-1/2 lg:w-1/3"
        type="file"
        name="postimage"
      />
  
      <input
        placeholder="Enter Your Title"
        class="px-4 py-2 text-black outline-none mt-2 rounded-lg block border border-white w-full sm:w-3/4 md:w-1/2 lg:w-1/3"
        type="text"
        name="title"
      />
  
      <textarea
        placeholder="Enter Your Desc"
        class="px-4 py-2 text-black resize-none h-60 outline-none mt-2 rounded-lg block border border-white w-full sm:w-3/4 md:w-1/2 lg:w-1/3"
        name="desc"
      ></textarea>
  
      <input
        type="submit"
        class="px-4 py-2 mt-2 block rounded-full bg-red-500 text-white hover:bg-red-600 transition duration-200"
        value="Create Post"
      />
    </form>
  </div>
  


<% include ./partials/footer.ejs %> 


