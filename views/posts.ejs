<% include ./partials/header.ejs %>

<div class="px-4 sm:px-6 md:px-10 mt-10">
  <% if (user.posts.length > 0) { %>
    <div class="grid gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      <% user.posts.forEach(function(post) { %>
        <div class="card flex flex-col items-center bg-zinc-800 p-4 rounded-lg shadow-lg text-white">
          <div class="w-full aspect-video rounded-lg overflow-hidden">
            <img src="data:<%= user.profileImage.contentType %>;base64,<%= user.profileImage.data.toString('base64') %>" class="w-full h-full object-cover" alt="">
          </div>
          <h5 class="text-lg font-semibold mt-4 text-center"><%= post.title %></h5>
          <p class="text-sm text-gray-300 mt-2 text-center"><%= post.desc %></p>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <h3 class="text-2xl text-center text-white">No Posts Yet...</h3>
  <% } %>
</div>

<% include ./partials/footer.ejs %>
