 <% include ./partials/header.ejs %>
 <div class="w-full min-h-screen bg-gradient-to-br from-zinc-200 via-zinc-300 to-zinc-400 flex items-center justify-center px-4">
   <div class="w-full max-w-md px-6 py-6 rounded-3xl bg-white shadow-xl">
     <h1 class="text-2xl sm:text-3xl tracking-tight leading-none text-center font-semibold text-zinc-800">
       Update Profile
     </h1>
 
     <form action="/edit" method="post" class="mt-6 space-y-4">
       <div>
         <label for="newname" class="block text-zinc-800 font-bold mb-1">Username</label>
         <input
  type="text"
  name="newname"
  class="w-full px-4 py-2 rounded-md border text-black bg-white border-zinc-500 outline-none focus:ring-2 focus:ring-blue-400"
  placeholder="Enter your name"
/>

       </div>
 
       <div>
         <label for="newpassword" class="block text-zinc-800 font-bold mb-1">Password</label>
         <input
  type="password"
  name="newpassword"
  class="w-full px-4 py-2 rounded-md border text-black bg-white border-zinc-500 outline-none focus:ring-2 focus:ring-blue-400"
  placeholder="Enter your password"
/>

       </div>
 
       <a href="#" class="text-sm inline-block text-zinc-700 hover:underline">Forgot Password?</a>
 
       <input
         type="submit"
         value="Update Profile"
         class="w-full bg-blue-500 hover:bg-blue-600 transition-colors duration-200 text-white py-2 rounded-full font-semibold cursor-pointer"
       />
     </form>
   </div>
 </div>
 

